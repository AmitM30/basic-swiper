{
    "extends": "standard",
    "rules": {
        "indent": [4, 8],
        "no-multi-spaces": [2, { "exceptions": { "VariableDeclarator": true } }],
        "semi": [2, "always"]
    },
    "ecmaFeatures": {
        "modules": true
    },
    "parserOptions": {
        "sourceType": "module"
    }
}
